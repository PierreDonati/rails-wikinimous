<div class="container">

  <div class="row">

    <div class= "col-md-offset-4 col-md-4 text-center">

      <p class="title">Create new article</p>

        <%= form_for @article do |f|   %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control text-margin"  %>
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control text-margin"  %>
        <%= f.submit :create, class: "btn btn-success text-margin" %>
        <% end %>

      <%= link_to "See list of articles", articles_path, class: "btn btn-primary text-margin" %>


    </div>

  </div>

</div>
